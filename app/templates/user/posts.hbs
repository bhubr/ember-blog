
    <!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="intro-header" style="background-image: url('/img/home-bg.jpg')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1>My Posts</h1>
                        <hr class="small">
                        <span class="subheading">A Clean Blog Theme by Start Bootstrap</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            {{#each model.posts as |post|}}
                <div class="post-preview">
                {{#link-to 'post.edit' post.id}}<span class="glyphicon glyphicon-edit float-right left-padding" aria-hidden="true"></span>{{/link-to}}
                    {{#link-to 'single' post.slug}}
                        <h2 class="post-title">
                            {{post.title}}
                        </h2>
                        <h3 class="post-subtitle">
                            {{{post.content}}}
                        </h3>
                    {{/link-to}}
                    <p class="post-meta">Posted by <a href="#">{{post.author.firstName}} {{post.author.lastName}}</a> on {{post.createdAt}}</p>
                </div>
                <hr>
            {{/each}}
                <!-- Pager -->
                <ul class="pager">
                    <li class="next">
                        <a href="#">Older Posts &rarr;</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>