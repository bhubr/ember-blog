
<h2>Add stuff</h2>
{{form-add-ride tags=model.tags carMakes=model.carMakes users=model.users}}

<div class="pure-g">
  <div class="pure-u-1 pure-u-md-1-4">
    <h3>posts ({{model.posts.length}})</h3>
    <ul>
    {{#each model.posts as |post|}}
    <li>{{post.title}}</li>
    {{/each}}
    </ul>
  </div>

  <div class="pure-u-1 pure-u-md-1-4">
    <h3>tags ({{model.tags.length}})</h3>
    <ul>
    {{#each model.tags as |tag|}}
    <li>{{tag.name}}</li> 
    {{/each}}
    </ul>
  </div>

  <div class="pure-u-1 pure-u-md-1-4">
    <h3>car makes ({{model.carMakes.length}})</h3>
    <ul>
    {{#each model.carMakes as |carMake|}}
    <li><h4>{{carMake.name}}</h4>
      <ul>
      {{#each carMake.cars as |car|}}
      <li>{{car.id}} {{car.name}}</li>
      {{/each}}
      </ul>
    </li> 
    {{/each}}
    </ul>
  </div>

  <div class="pure-u-1 pure-u-md-1-4">
    <h3>people I follow ({{model.users.length}})</h3>
    {{user-selector users=model.users}}

    <h3>Followers by user ({{model.users.length}})</h3>
    <ul>
    {{#each model.users as |user|}}
      <li>{{user.email}}
      <ul>
      {{#each user.followers as |follower|}}
        <li>{{follower.email}}</li>
      {{/each}}
      </ul>
      </li>
    {{/each}}
    </ul>
  </div>

</div>