<form id="signupForm" {{action "onSubmit" on="submit"}}>
    <div class="row control-group">
        <div class="form-group col-xs-12 floating-label-form-group controls">
            <label for="firstName">First Name</label>
            {{input id="firstName" type="text" class="form-control" value=user.firstName placeholder="First name"}}
            <p class="help-block text-danger"></p>
        </div>
    </div>
    <div class="row control-group">
        <div class="form-group col-xs-12 floating-label-form-group controls">
            <label for="lastName">Last Name</label>
            {{input id="lastName" type="text" class="form-control" value=user.lastName placeholder="Last name"}}
            <p class="help-block text-danger"></p>
        </div>
    </div>
    <div class="row control-group">
        <div class="form-group col-xs-12 floating-label-form-group controls">
            <label for="username">Username</label>
            {{input id="username" type="text" class="form-control" value=user.username placeholder="Username"}}
            <p class="help-block text-danger"></p>
        </div>
    </div>
    <div class="row control-group">
        <div class="form-group col-xs-12 floating-label-form-group controls">
            <label for="email">Email Address</label>
            {{input id="email" type="email" class="form-control" value=user.email placeholder="Email Address"}}
            <p class="help-block text-danger"></p>
        </div>
    </div>
    <div class="row control-group">
        <div class="form-group col-xs-12 floating-label-form-group controls">
            <label for="password">Password</label>
            {{input id="password" type="password" class="form-control" value=password placeholder="password" disabled=true}}
            <p class="help-block text-danger"></p>
        </div>
    </div>
    <div class="row control-group">
        <div class="form-group col-xs-12 floating-label-form-group controls">
            <label for="passwordConfirm">Password confirmation</label>
            {{input id="passwordConfirm" type="password" class="form-control" value=passwordConfirm placeholder="password confirmation" disabled=true}}
            <p class="help-block text-danger"></p>
        </div>
    </div>
    <br>
    <div id="success"></div>
    <div class="row">
        <div class="form-group col-xs-12">
            <button type="submit" class="btn btn-default">Update</button>
        </div>
    </div>
</form>
