<form name="sentMessage" id="contactForm" novalidate {{action 'sendMessage' on='submit'}}>
    <div class="row control-group">
        <div class="form-group col-xs-12 floating-label-form-group controls">
            <label for="name">Name</label>
            {{input type="text" class="form-control" placeholder="Name" id="name" value=name}}
            <p class="help-block text-danger"></p>
        </div>
    </div>
    <div class="row control-group">
        <div class="form-group col-xs-12 floating-label-form-group controls">
            <label for="email">Email Address</label>
            {{input type="email" class="form-control" placeholder="Email Address" id="email" value=email}}
            <p class="help-block text-danger"></p>
        </div>
    </div>
    <div class="row control-group">
        <div class="form-group col-xs-12 floating-label-form-group controls">
            <label for="website">Web Site</label>
            {{input type="text" class="form-control" placeholder="Website URL" id="website" value=website}}
            <p class="help-block text-danger"></p>
        </div>
    </div>
    <div class="row control-group">
        <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Message</label>
            {{textarea rows="5" class="form-control" placeholder="Message" id="message" value=message}}
            <p class="help-block text-danger"></p>
        </div>
    </div>
    <br>
    <div id="success" class="alert {{status}}">{{statusMessage}}</div>
    <div class="row">
        <div class="form-group col-xs-12">
            <button type="submit" class="btn btn-default">Send</button>
        </div>
    </div>
</form>