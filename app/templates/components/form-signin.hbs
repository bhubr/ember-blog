<form class="pure-form pure-form-stacked" {{action "onSubmit" on="submit"}}>
  <fieldset>
    <legend>Sign in</legend>

    <label for="email">Email</label>
    {{input id="email" name="email" value=email placeholder="email" class="validate"}}
    <span class="pure-form-message">This is a required field.</span>

    <label for="password">Password</label>
    {{input id="password" type="password" name="password" value=password placeholder="password" class="validate"}}

    <button type="submit" class="pure-button pure-button-primary">Sign in</button>
  </fieldset>
</form>